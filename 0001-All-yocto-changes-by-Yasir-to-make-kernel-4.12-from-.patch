+ 			#power-domain-cells = <1>;
+ 		};
++
++                fb: fb {
++                        compatible = "brcm,bcm2708-fb";
++                        firmware = <&firmware>;
++                        status = "disabled";
++                };
++
++                vchiq: vchiq {
++                        compatible = "brcm,bcm2835-vchiq";
++                        reg = <0x7e00b840 0xf>;
++                        interrupts = <0 2>;
++                        cache-line-size = <32>;
++                        firmware = <&firmware>;
++                };
++
++                /* Onboard audio */
++                audio: audio {
++                        compatible = "brcm,bcm2835-audio";
++                        brcm,pwm-channels = <8>;
++                        status = "disabled";
++                };
++
+ 	};
+ };
